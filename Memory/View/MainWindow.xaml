<Window x:Class="Memory.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF120505"/>
                <GradientStop Color="#FF261125" Offset="0.514"/>
                <GradientStop Color="#FF1B1336" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Text="Welcome to the memory game!" Foreground="White" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,350"/>

        <ListBox x:Name="UserList" 
                 BorderBrush="White" Margin="58,51,479,95"
                 ItemsSource="{Binding Users}"
                 SelectedItem="{Binding SelectedUser}"
                 DisplayMemberPath="Name"
                 />

        <Image x:Name="UserAvatar" 
               Margin="486,54,70,155" Stretch="Uniform"
               Source="{Binding SelectedUser.AvatarPath}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,337,190,10">
            <Button Content="Add User" Width="90" Margin="5" Command="{Binding AddUserCommand}"/>
            <Button Content="Delete User" Width="90" Margin="5" Command="{Binding DeleteUserCommand}" IsEnabled="{Binding CanDeleteOrPlay}"/>
            <Button Content="Play" Width="90" Margin="5" IsEnabled="{Binding CanDeleteOrPlay}" Click="PlayButton_Click"/> <!--Command="{Binding PlayCommand}"-->
            <Button Content="Exit" Width="90" Margin="5" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
